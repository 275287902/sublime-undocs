h1, h2, h3 {
    color: #454545;
    font-family: "Arial";
    letter-spacing: -0.1em;
}

pre {
    font-family: Consolas, Courier New, sans;
}

span.pre {
    background-color: transparent;
}


.highlight pre {
    border: 1px solid gray;
}

.highlight pre {
/*    background-color: #F8F8F8;*/
    background-color: #DBDBDB;
    padding-top: 0.5em;
    padding-left: 1em;
    padding-bottom: 0.5em;
    font-family: Consolas, Courier New, sans;
}

